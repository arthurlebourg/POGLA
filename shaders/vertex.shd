#version 450

in vec3 position;
in vec3 normal;
in vec2 uv;

out VS_OUT {
    vec3 position;
    vec3 normal;
    vec2 uv;
} vs_out;

uniform mat4 transform;

void main()
{
    vs_out.position = (transform * vec4(position, 1.0)).xyz;
    vs_out.normal = normal;// mat3(transpose(inverse(transform))) * normal;
    vs_out.uv = uv;
    gl_Position = vec4(vs_out.position, 1.0);
}
